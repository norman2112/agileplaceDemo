# Auto-Resolution System Configuration

# Application
APP_NAME="Incident Auto-Resolution System"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true

# API Configuration
API_HOST="0.0.0.0"
API_PORT=8000
API_RELOAD=true

# Auto-Resolution Settings
DEFAULT_CONFIDENCE_THRESHOLD=0.90
MAX_CONCURRENT_RESOLUTIONS=10
AUTO_RESOLUTION_ENABLED=true

# Notification Configuration
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=notifications@example.com
# SMTP_PASSWORD=your_password
# NOTIFICATION_FROM_EMAIL=noreply@example.com

# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
# PAGERDUTY_API_KEY=your_pagerduty_api_key

# Database Configuration (optional - for production)
# DATABASE_URL=postgresql://user:password@localhost:5432/incidents
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# Redis Configuration (optional - for caching and queuing)
# REDIS_URL=redis://localhost:6379/0
# REDIS_CACHE_TTL=3600

# Monitoring
# SENTRY_DSN=your_sentry_dsn
# ENABLE_METRICS=true
# METRICS_PORT=9090

# Logging
LOG_LEVEL="INFO"
LOG_FORMAT="json"
